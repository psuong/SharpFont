<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<AssemblyName>SpaceWizards.SharpFont</AssemblyName>
		<TargetFramework>net7.0</TargetFramework>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Version>1.0.2</Version>

		<GenerateDocumentationFile>true</GenerateDocumentationFile>
		<IncludeSymbols>true</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>

		<Copyright>Copyright (c) Robert Rouhani 2012-2016, Space Wizards Contributors 2019-2023</Copyright>
		<Authors>Robmaister, Space Wizards</Authors>
		<Description>Cross-platform FreeType bindings for C#. This package does not automatically provide a build of Freetype itself, so you will have to deal with this manually. Note that on Windows you cannot use a stock build of freetype.dll, as the build has to be modified (to fix some FFI issues). See this repo for more information: https://github.com/Robmaister/SharpFont.Dependencies</Description>
		<PackageTags>freetype,sharpfont,font</PackageTags>
		
		<RepositoryType>Git</RepositoryType>
		<RepositoryUrl>https://github.com/space-wizards/SharpFont</RepositoryUrl>
		<PackageProjectUrl>https://github.com/space-wizards/SharpFont</PackageProjectUrl>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		
		<!-- SourceLink -->
		<PublishRepositoryUrl>true</PublishRepositoryUrl>
	</PropertyGroup>
</Project>
